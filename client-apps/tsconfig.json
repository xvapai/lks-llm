{
  "compilerOptions": {
    /* ===== Path Alias (WAJIB) ===== */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ===== Target & Runtime ===== */
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    /* ===== Module System ===== */
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ===== Type Safety ===== */
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,

    /* ===== Build Performance ===== */
    "incremental": true,

    /* ===== Next.js Plugin ===== */
    "plugins": [
      { "name": "next" }
    ],

    /* ===== JavaScript Support ===== */
    "allowJs": true
  },

  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}
